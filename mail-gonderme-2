import smtplib
from email.mime.multipart import MIMEMultipart
from email.mime.text import MIMEText
import sys
from configparser import ConfigParser
email = input("Enter Your Gmail: ")
passw = input("Enter Your Passw : ")
with open("mailler.txt", "r") as file:  # filename is veriable
    for i in file:
        liste = []
        i = i[:-1]
        liste = i.split(",")


        file = "mail.ini"
        config = ConfigParser()
        config.read(file)

        email = config["account"]["y_email"]

        mesaj = MIMEMultipart()
        mesaj["From"] = email
        mesaj["To"] = liste[1]
        mesaj["Subject"] = "TOPLU MAİL"
        yazı = """
            content your mail's

            """

        mesajg = MIMEText(yazı, "plain")
        mesaj.attach(mesajg)

        try:
            mail = smtplib.SMTP("smtp.gmail.com", 587)
            mail.ehlo()
            mail.starttls()
            mail.login(email,passw)
            mail.sendmail(mesaj["From"], mesaj["To"], mesaj.as_string())
            print(liste[1] + "Sending Successful")
        except:
            sys.stderr.write("Send Failed")
            sys.stderr.flush()
